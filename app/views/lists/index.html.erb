<div class="container mt-4">
  <h1>List</h1>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-lg-4 col-md-6 cold-sm-6 ">
        <div class="mb-2 d-flex justify-content-around">

          <div class='<%= list.name %> size'>
            <%= link_to list.name, list_path(list)  %>
          </div>

        </div>
      </div>
    <% end %>
    <%= link_to "New List", new_list_path, class: "btn btn-primary m-4" %>

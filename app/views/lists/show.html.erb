<div class="container mt-4">
  <h1><%= @list.name %></h1>
  <div class="row">
    <% @list.bookmarks.each do |l| %>
      <div class="col-lg-3 col-md-6 cold-sm-12">
        <div class="card p-2 mb-1 d-flex justify-content-around">
          <img src=<%= l.movie.poster_url %>>
          <div class="d-flex">
            <h4 ><%= l.movie.title %></h4>
            <%= link_to bookmark_path(l), method: :delete, data: { confirm: 'Are you sure you want to delete?' } do %>
              <i class="fas fa-trash-alt flex-end"></i>
            <% end %>
          </div>
          <p><%= l.comment %></p>
          <p><%= l.movie.rating %>/10 ‚≠ê</p>
          <p><%= l.movie.overview %></p>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'Create Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
  <%= link_to 'back', lists_path, class: 'btn btn-warning' %>
</div>
